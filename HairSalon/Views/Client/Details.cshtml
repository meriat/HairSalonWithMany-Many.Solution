@{
  Layout = "_Layout";
}
<div class="container">
<h3>List of stylists under @Model["client"].Name</h3>
<hr />

<form action='/clients/@Model["client"].Id/stylists' method="post">
  <label for="stylist_name">Add a Stylist</label>
  <input type="text" name="stylist_name" id="stylist_name" />
  <button type="submit" class="btn btn-info">Add</button>
</form>
<hr />
<h3>List of Stylists</h3>

<table class = "table table-hover">
  <thead>
      <th class="col-md-4">Name</th>
      <th class="col-md-4">Edit</th>
      <th class="col-md-4">Delete</th>
   
  </thead>
  <tbody>

  @foreach (var stylist in Model["client"].GetStylists())
  {
  <tr>
    <td class="col-md-4"><a href="">@stylist.StylistName</a></td>
    <td class="col-md-4"><a href='/clients/@Model["client"].Id/stylists/@stylist.Id/update' class="btn btn-info">Edit</a></td>
    <td class="col-md-4">
        <form action='/clients/@Model["client"].Id/stylists/@stylist.Id/delete' method="post">
        <button class="btn btn-danger">Delete</button>
        </form>
    </td>
  </tr>
  }
  </tbody>
</table>
<a href="/clients" class="btn btn-secondary">Back to the clientt list</a>
</div>