@{
  Layout = "_Layout";
}

<div class="container">

<form action="/stylists" method="post">
<label for="name">Add a new stylist </label>
<input type="text" name="name" id="name" /><br >
<button type="submit" class="btn btn-warning">Add</button>
</form>
<hr />
<h3>List of stylists</h3>

<table class = "table table-hover">
<thead>
    <th class="col-md-4">Name</th>
    <th class="col-md-4">Edit</th>
    <th class="col-md-4">Delete</th>
</thead>
  <tbody>

  @foreach (var stylist in Model)
  {
  <tr>
    <td class="col-md-4"><a href="/stylists/@stylist.Id">@stylist.StylistName</a></td>
    <td class="col-md-4"><a href="/stylists/@stylist.Id/update" class="btn btn-info">Edit</a></td>
    <td class='col-md-4'>
      <form action="/stylists/@stylist.Id/delete" method="post">
        <button type="submit" class='btn btn-danger'>Delete</button>
      </form>
    </td>
  </tr>
  }
  </tbody>
</table>
<a href="/" class="btn btn-secondary">Back home</a>

</div>
